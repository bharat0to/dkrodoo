<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record model="ir.module.category" id="module_category_invoicing">
        <field name="name">Vendor Invoicing</field>
        <field name="description">Helps you handle your accounting needs, if you are not an accountant, we suggest you to install only the Invoicing.</field>
        <field name="sequence">7</field>
    </record>

    <record id="group_finance_manager" model="res.groups">
        <field name="name">Finance Manager</field>
        <field name="category_id" ref="module_category_invoicing"/>
        <field name="implied_ids" eval="[(4,ref('website_slides.group_website_slides_officer'))]"/>
        <field name="users" eval="[(4,ref('base.user_admin'))]"/>
        <field name="comment">
            Finance Manager can approve or reject Vendor On-boarding requests.
        </field>
    </record>
<!--    <record id="group_finance_controller" model="res.groups">-->
<!--        <field name="name">Finance Controller</field>-->
<!--        <field name="users" eval="[(4,ref('base.user_admin'))]"/>-->
